<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/bleu_vert_app"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="128dp"
        android:layout_height="110dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/ic_logo_blanc" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/jetbrains_mono"
        android:text="@string/pharmassist"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/inter"
        android:text="@string/une_application_financ_e_par"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="228dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/inter_removebg_preview" />

</LinearLayout>
